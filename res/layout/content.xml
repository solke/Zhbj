<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.snowapp.zhbj.widget.NoScorllViewPager
        android:id="@+id/content_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
	<RadioGroup 
	    android:id="@+id/content_rg"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/bottom_tab_bg"
	    android:orientation="horizontal">
	    <RadioButton 
	        android:id="@+id/content_rb_home"
	        style="@style/tab_style"
	        android:text="首页"
	        android:drawableTop="@drawable/tab_home"/>
	    <RadioButton 
	        android:id="@+id/content_rb_news"
	        style="@style/tab_style"
	        android:text="新闻中心"
	        android:drawableTop="@drawable/tab_news"/>
	    <RadioButton 
	        android:id="@+id/content_rb_smartservice"
	        style="@style/tab_style"
	        android:text="智慧服务"
	        android:drawableTop="@drawable/tab_smartservice"/>
	    <RadioButton 
	        android:id="@+id/content_rb_gov"
	        style="@style/tab_style"
	        android:text="政务"
	        android:drawableTop="@drawable/tab_gov"/>
	    <RadioButton 
	        android:id="@+id/content_rb_setting"
	        style="@style/tab_style"
	        android:text="设置"
	        android:drawableTop="@drawable/tab_setting"/>
	</RadioGroup>
</LinearLayout>